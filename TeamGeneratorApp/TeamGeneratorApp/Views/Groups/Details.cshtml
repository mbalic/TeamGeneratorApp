@model TeamGeneratorApp.Models.Group
@{
    ViewBag.Title = "Details";
}
<br/>
<p>
    @Html.ActionLink("< Back", "Index", "Groups")
</p>
<h2>@ViewBag.GroupName</h2>
<hr/>
<h4>Group</h4>
<br/>
<div>

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>

<div id="tabs">
    <ul class="nav nav-tabs">
        <li class="active">
            <a href="#Categories" data-toggle="tab">Categories</a>
        </li>
        <li>
            <a href="#Users" data-toggle="tab">Users</a>
        </li>
        <li>
            <a href="#Invitations" data-toggle="tab">Invitations</a>
        </li>
    </ul>

    <div class="tab-content">
        <div class="tab-pane active" id="Categories">
            @Html.Action("CategoriesGrid", "Groups", new { groupId = Model.Id })
        </div>
        <div class="tab-pane" id="Users">
            @Html.Action("UsersInGroupGrid", "Groups", new { groupId = Model.Id })
        </div>
        <div class="tab-pane" id="Invitations">
            @Html.Action("InvitationsGrid", "Groups", new { groupId = Model.Id })
        </div>
    </div>

</div>




