@model TeamGeneratorApp.Models.ViewModels.CategoryVM

@{
    ViewBag.Title = "Details";
}
<br />
<p>
    @Html.ActionLink("< Back to group", "Details", "Groups", new {id = Model.GroupId}, null)
</p>
<h2>@Html.DisplayFor(model => model.Name)</h2>
<hr />
<h4>Category</h4>
<br />
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.GroupName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GroupName)
        </dd>




    </dl>
</div>
<div id="tabs">
    <ul class="nav nav-tabs">
        <li class="active">
            <a href="#Events" data-toggle="tab">Events</a>
        </li>
        <li>
            <a href="#Users" data-toggle="tab">Users</a>
        </li>
        <li>
            <a href="#Positions" data-toggle="tab">Positions</a>
        </li>
    </ul>

    <div class="tab-content">
        <div class="tab-pane active" id="Events">
            @Html.Action("EventsGrid", "Categories", new { categoryId = Model.Id, isOwner = ViewBag.IsOwner })
        </div>
        <div class="tab-pane" id="Users">
            @Html.Action("UsersGrid", "Categories", new {categoryId = Model.Id, isOwner = ViewBag.IsOwner })
        </div>
        <div class="tab-pane" id="Positions">
            @Html.Action("PositionsGrid", "Categories", new { categoryId = Model.Id, isOwner = ViewBag.IsOwner })
        </div>
    </div>

</div>
